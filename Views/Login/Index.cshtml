@model App.Models.Usuario
@{
    ViewData["Title"] = "";
}

<div class="tudo-do-login">

    <div class="left-partLogin">
        <img src="https://img.freepik.com/fotos-premium/sushi-em-uma-mesa-de-restaurante_7939-3082.jpg" alt=""
            class="img-fluid">
    </div>

    <div class=" container col-12 col-lg-6 d-block mx-auto content-login right-partLogin">
        <h1 class="h1-login text-center mt-5">Login</h1>
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group d-block mx-auto">
                <label asp-for="Login" class="control-label"></label>
                <input asp-for="Login" class="form-control input-login-senha" />
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>
            <div class="form-group d-block mx-auto">
                <label asp-for="Senha" class="control-label"></label>
                <input type="password" asp-for="Senha" class="form-control input-login-senha mb-3" />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
        @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
        {
                <p class="text-danger ">@ViewBag.ErrorMessage</p>
        }

            <input type="submit" value="Entrar" class="button-login d-block mx-auto" />
        </form>
    </div>
</div>